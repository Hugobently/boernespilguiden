# Børnespilguiden Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (Vercel Postgres)
# =============================================================================

# These are automatically set by Vercel when you create a Postgres database
# DO NOT set these manually - Vercel handles them automatically

# Connection pooling URL (for serverless)
DATABASE_URL="postgresql://..."

# Direct connection URL (for migrations)
DIRECT_URL="postgresql://..."

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

# Base URL for the site (used for canonical URLs, sitemaps, etc.)
NEXT_PUBLIC_SITE_URL="https://boernespilguiden.dk"

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Plausible Analytics (privacy-friendly alternative)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN="boernespilguiden.dk"

# =============================================================================
# AFFILIATE LINKS (Optional)
# =============================================================================

# Amazon Associates Tag
# AMAZON_ASSOCIATE_TAG="your-tag-20"

# =============================================================================
# EMAIL (Optional - for contact form)
# =============================================================================

# SMTP Configuration
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-password"
# CONTACT_EMAIL="kontakt@boernespilguiden.dk"

# =============================================================================
# FILM & SERIER (TMDB + Anthropic)
# =============================================================================

# TMDB API Key (gratis på themoviedb.org/settings/api)
TMDB_API_KEY="your_tmdb_api_key_here"

# Anthropic Claude API (til review generering)
ANTHROPIC_API_KEY="sk-ant-api03-..."

# Admin endpoint authentication (brug en lang random string)
ADMIN_SECRET="create_a_long_random_string_here"

# Vercel cron authentication (brug en anden lang random string)
CRON_SECRET="create_another_random_string_here"
