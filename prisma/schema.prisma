generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameTranslation {
  id               String  @id @default(cuid())
  gameId           String
  locale           String
  title            String
  description      String
  shortDescription String
  pros             String  @default("[]")
  cons             String  @default("[]")
  parentTip        String?
  game             Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([gameId, locale])
  @@index([locale])
}

model BoardGameTranslation {
  id               String    @id @default(cuid())
  boardGameId      String
  locale           String
  title            String
  description      String
  shortDescription String
  pros             String    @default("[]")
  cons             String    @default("[]")
  parentTip        String?
  boardGame        BoardGame @relation(fields: [boardGameId], references: [id], onDelete: Cascade)

  @@unique([boardGameId, locale])
  @@index([locale])
}

model Game {
  id                    String            @id @default(cuid())
  title                 String
  slug                  String            @unique
  description           String
  shortDescription      String
  minAge                Int
  maxAge                Int
  ageGroup              String
  categories            String            @default("[]")
  skills                String            @default("[]")
  themes                String            @default("[]")
  targetGender          String            @default("alle")
  platforms             String            @default("[]")
  appStoreUrl           String?
  playStoreUrl          String?
  websiteUrl            String?
  hasAds                Boolean           @default(false)
  hasInAppPurchases     Boolean           @default(false)
  isOfflineCapable      Boolean           @default(false)
  requiresInternet      Boolean           @default(false)
  dataCollection        String?
  price                 Float             @default(0)
  priceModel            String
  rating                Float
  pros                  String[]          @default([])
  cons                  String[]          @default([])
  parentTip             String?
  iconUrl               String?
  screenshots           String            @default("[]")
  videoUrl              String?
  developerName         String?
  affiliateUrl          String?
  affiliateProvider     String?
  featured              Boolean           @default(false)
  editorChoice          Boolean           @default(false)
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  hasChat               Boolean           @default(false)
  hasManipulativeDesign Boolean           @default(false)
  hasNotifications      Boolean           @default(false)
  hasScaryContent       Boolean           @default(false)
  hasSocialFeatures     Boolean           @default(false)
  isCoppaCompliant      Boolean           @default(true)
  parentInfo            String?
  requiresReading       Boolean           @default(false)
  typicalSessionMinutes Int?
  supportsDanish        Boolean           @default(false)
  translations          GameTranslation[]
}

model BoardGame {
  id               String                 @id @default(cuid())
  title            String
  slug             String                 @unique
  description      String
  shortDescription String
  minAge           Int
  maxAge           Int
  ageGroup         String
  minPlayers       Int
  maxPlayers       Int
  playTimeMinutes  Int
  complexity       Int
  categories       String                 @default("[]")
  skills           String                 @default("[]")
  themes           String                 @default("[]")
  targetGender     String                 @default("alle")
  price            Float?
  affiliateUrl     String?
  amazonUrl        String?
  rating           Float
  pros             String[]               @default([])
  cons             String[]               @default([])
  parentTip        String?
  imageUrl         String?
  featured         Boolean                @default(false)
  editorChoice     Boolean                @default(false)
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  supportsDanish   Boolean                @default(false)
  translations     BoardGameTranslation[]
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  type      String
  sessionId String?
  data      String
  timestamp DateTime @default(now())

  @@index([type])
  @@index([timestamp])
  @@index([sessionId])
}

model SearchQuery {
  id        String   @id @default(cuid())
  query     String   @unique
  count     Int      @default(1)
  lastUsed  DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([count])
  @@index([lastUsed])
}

model Media {
  id                 String          @id @default(cuid())
  tmdbId             Int?            @unique
  drEntityId         String?         @unique
  type               String
  title              String
  originalTitle      String?
  slug               String          @unique
  description        String?
  review             String?
  posterUrl          String?
  backdropUrl        String?
  releaseDate        DateTime?       @db.Timestamp(6)
  runtime            Int?
  ageMin             Int?
  ageMax             Int?
  genres             String[]
  seasons            Int?
  source             String
  isDanish           Boolean         @default(false)
  isNordic           Boolean         @default(false)
  isActive           Boolean         @default(true)
  isReviewed         Boolean         @default(false)
  isFeatured         Boolean         @default(false)
  createdAt          DateTime        @default(now()) @db.Timestamp(6)
  updatedAt          DateTime        @default(now()) @updatedAt @db.Timestamp(6)
  parentInfo         String?
  parentTip          String?
  pros               String[]        @default([])
  cons               String[]        @default([])
  hasViolence        Boolean         @default(false)
  hasScaryContent    Boolean         @default(false)
  hasLanguage        Boolean         @default(false)
  hasEducational     Boolean         @default(false)
  hasDanishAudio     Boolean?
  hasDanishSubtitles Boolean?
  availableLanguages String[]        @default([])
  streamingInfo      StreamingInfo[]
}

model StreamingInfo {
  id          String   @id @default(cuid())
  mediaId     String
  provider    String
  providerId  Int?
  available   Boolean  @default(true)
  url         String?
  isFree      Boolean  @default(false)
  lastChecked DateTime @default(now()) @db.Timestamp(6)
  media       Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
